{
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.shellIntegration.decorationsEnabled":"gutter",
    "python.formatting.provider": "black",
    "python.defaultInterpreterPath": "${workspaceRoot}/env/bin/python",
    "autoDocstring.docstringFormat": "google",
    "workbench.colorCustomizations": {
        "[Monokai]": {
            "titleBar.activeBackground": "#098088"
        },
        "[Default Dark+]": {
            "titleBar.activeBackground": "#098088"
        },
        "[Visual Studio Dark]": {
            "titleBar.activeBackground": "#ff0000",
            "titleBar.activeForeground": "#77f5ac"
        }
    },
    "workbench.colorTheme": "Monokai",
    "esbonio.sphinx.confDir": "",
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "spellchecker.ignoreWordsList": ["LibreOffice"],
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "**/build/**": true,
        "**/env/**": true,
        "**/tmp/**": true,
        "**/.pytest_cache/**": true,
        "**/.idea/**": true,
        "**/__pycache__/**": true
    }
}